<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
	x:Class="MyShips.Views.ItemDetailPage"
	xmlns="http://xamarin.com/schemas/2014/forms"
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
	Title="{Binding Title}">
	<ScrollView
		Padding="0"
		HorizontalOptions="FillAndExpand"
		HorizontalScrollBarVisibility="Default"
		Orientation="Both"
		VerticalOptions="FillAndExpand"
		VerticalScrollBarVisibility="Default">
		<StackLayout
			Padding="15"
			Orientation="Vertical"
			Spacing="20">
			<Label
				FontAttributes="Bold"
				FontSize="Medium"
				Text="Text:"
				TextColor="Black" />
			<Label
				FontSize="Small"
				LineBreakMode="WordWrap"
				Text="{Binding Item.Text}"
				TextColor="Black" />
			<Label
				FontAttributes="Bold"
				FontSize="Medium"
				Text="Description:"
				TextColor="Black" />
			<Label
				FontSize="Small"
				LineBreakMode="WordWrap"
				Text="{Binding Item.Description}"
				TextColor="Black" />
			<Label
				FontAttributes="Bold"
				FontSize="Medium"
				Text="More Info:"
				TextColor="Black" />
			<Label
				FontSize="Small"
				LineBreakMode="WordWrap"
				Text="{Binding Item.LongDescription}"
				TextColor="Black" />
			<Image
				Aspect="AspectFit"
				HeightRequest="160"
				Source="{Binding Item.PictureName}"
				VerticalOptions="Center"
				WidthRequest="160" />
		</StackLayout>
	</ScrollView>
</ContentPage>