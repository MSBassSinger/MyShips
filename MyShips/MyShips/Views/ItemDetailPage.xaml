<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
	x:Class="MyShips.Views.ItemDetailPage"
	xmlns="http://xamarin.com/schemas/2014/forms"
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
	Title="{Binding Title}">

	<ScrollView>
        <StackLayout Margin="20">

            <Label Text="Location:" 
				Style="{StaticResource ItemHeader1Style}" />

            <Label Text="{Binding Item.Text}"
                TextColor="Black"
                Style="{DynamicResource BodyStyle}" />

            <Label Text="Description:"
				Style="{StaticResource ItemHeader2Style}" />

            <Label Text="{Binding Item.Description}"
                TextColor="Black"
                 Style="{DynamicResource BodyStyle}" />

            <Label Text="More Info:"
				Style="{StaticResource ItemHeader2Style}" />

            <Label Text="{Binding Item.LongDescription}"
                TextColor="Black"
                Style="{DynamicResource BodyStyle}" />

            <Image Source="{Binding Item.PictureName}"
                HeightRequest="200" 
                WidthRequest="200" 
                HorizontalOptions="CenterAndExpand" />

        </StackLayout>
    </ScrollView>
</ContentPage>