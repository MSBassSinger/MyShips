<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
	x:Class="MyShips.Views.MenuPage"
	xmlns="http://xamarin.com/schemas/2014/forms"
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
	Title="Menu">
	<StackLayout VerticalOptions="FillAndExpand">
		<ListView
			x:Name="ListViewMenu"
			BackgroundColor="White"
			HasUnevenRows="True">
			<ListView.ItemTemplate>
				<DataTemplate>
					<ViewCell>
						<Grid Padding="10">
							<Label
								BackgroundColor="White"
								FontSize="20"
								Text="{Binding Title}"
								TextColor="Black" />
						</Grid>
					</ViewCell>
				</DataTemplate>
			</ListView.ItemTemplate>
		</ListView>
	</StackLayout>
</ContentPage>